<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/contentView">


    </android.support.v7.widget.RecyclerView>


  </LinearLayout>


    <include layout="@layout/cb_base_error_view"/>
    <include layout="@layout/cb_base_loading_view"/>

  <TextView
      android:id="@+id/emptyView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="You have not created any item for this section yet."
      android:layout_gravity="center"
      android:gravity="center"
      android:layout_centerInParent="true"
      android:drawableTop="@drawable/cb_ic_no_data_found"
      android:drawablePadding="20dp"
      android:textColor="@color/cb_text_color_gray_dark"
      android:padding="30dp"
      android:textSize="20sp"
      android:visibility="gone"/>

</FrameLayout>