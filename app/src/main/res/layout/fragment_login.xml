<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_pink_700">

    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/md_white"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_icon_accessoires"/>

    <EditText
        android:id="@+id/username_edit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/user_name"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"
        android:textColorHint="@color/md_grey_300"
        android:textColor="@color/md_white"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/password_edit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="@string/password"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"
        android:textColorHint="@color/md_grey_300"
        android:textColor="@color/md_white"
        android:singleLine="true"
        android:inputType="textPassword"/>

    <TextView
        android:id="@+id/forgot_pswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/forgot_pswd_txt"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginLeft="35dp"
        android:textColor="@color/md_white"/>

    <TextView
        android:id="@+id/login_btn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="@string/longin_txt"
        android:gravity="center"
        android:textSize="25sp"
        android:background="@color/md_pink_800"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/md_white"/>

    <TextView
        android:id="@+id/register_btn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:text="@string/register_txt"
        android:gravity="center"
        android:textSize="25sp"
        android:background="@color/md_pink_800"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/md_white"/>

</LinearLayout>